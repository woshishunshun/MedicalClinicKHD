                shadeClose: true,
                shade: false,
                maxmin: true, //开启最大化最小化按钮
                area: ['893px', '600px'],
                content: '/PatientLogin/PatientLoginShow'
            });
        }
        function RegisterLayer() {
            //注册iframe窗
            layer.open({
                type: 2,
                title: 'MedicalClinic预约挂号 注册',
                shadeClose: true,
                shade: false,
                maxmin: true, //开启最大化最小化按钮
                area: ['893px', '600px'],
                content: '/PatientLogin/PatientRegisterShow'
            });
        }
        $(function () {
        if ("@Session["UserName"].ToString()" == "未登录")
        {
           $("#login").text()="登陆";
            return;
        }
        else
        {
            $("#login").text(@Session["UserName"].ToString().Length>3?"@Session["UserName"].ToString().Substring(0,3) ..":"@Session["UserName"].ToString()");
        }
        })

    </script>
